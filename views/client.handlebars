<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Clients</h1>
        <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#addClient">Add
            Client</button>
    </div>

    <div class="row">
        <div class="col">
            <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Website</th>
                </tr>
            </thead>
            <tbody>
                {{#each clients}}
                <tr>
                    <td><a href="/clients/{{id}}">{{name}}</a></td>
                    <td>{{ website }}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</main>
<div class="modal fade" id="addClient" tabindex="-1" role="dialog" aria-labelledby="addClientLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addClientLabel">Add Client</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="companyName">Company Name</label>
                        <input name="companyName" type="text" class="form-control" id="companyName"
                            aria-describedby="companyNameHelp" placeholder="Company Name">
                    </div>
                    <div class="form-group">
                        <label for="clientName">Contact Name</label>
                        <input name="clientName" type="text" class="form-control" id="clientName"
                            placeholder="Contact Name">
                    </div>
                    <div class="form-group">
                        <label for="contactEmail">Contact Email address</label>
                        <input name="contactEmail" type="email" class="form-control" id="contactEmail"
                            aria-describedby="emailHelp" placeholder="Contact Email">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button name="addClient" type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>